					"minimum": 1,
					"maximum": 100
				},
				"timeStep": {
					"bsonType": "string",
					"title": "时段步长",
					"defaultValue": "1800",
					"enum": [{
						"text": "半小时",
						"value": "1800"
					}, {
						"text": "1小时",
						"value": "3600"
					}]
				}
			}
		},
		"deliveryTypes": {
			"bsonType": "array",
			"title": "配送方式",
			"defaultValue": "deliveryHome",
			"enum": [{
				"text": "配送到家",
