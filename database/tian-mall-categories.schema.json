{
	"name": "平台分类,3级分类",
	"bsonType": "object",
	"required": ["name"],
	"permission": {
		"read": true,
		"create": true,
		"update": "'tian-mall-categories' in auth.permission",
		"delete": "'tian-mall-categories' in auth.permission"
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（文章 ID），系统自动生成"
		},
		"parent_id": {
			"bsonType": "string",
			"description": "父ID，用于多级分类",
			"parentKey": "_id"
		},
		"name": {
			"bsonType": "string",
			"description": "类别名称",
			"title": "类别名称",
			"trim": "both"
		},
		"icon": {
			"bsonType": "string",
			"description": "类别图标\/图片地址",
			"title": "图标地址",
			"pattern": "^(http:\/\/|https:\/\/|\/|.\/|@\/)\\S",
			"trim": "both"
		},
		"ad_banner": {
			"bsonType": "string",
			"title": "广告图",
			"component": {
				"name": "cloud-image",
				"props": {
					"size": "450x150"
				}
			}
		},
		"ad_open_url": {
			"bsonType": "string",
			"title": "广告跳转"
		},
		"sort": {
			"bsonType": "int",
			"description": "类别排序，越大越靠后",
			"title": "排序"
		},
		"description": {
			"bsonType": "string",
			"description": "类别描述",
			"title": "类别描述",
			"trim": "both"
		},
		"is_hot_show": {
			"bsonType": "bool",
			"title": "加入热门显示",
			"description": "是否热门显示"
		},
		"is_index_show": {
			"bsonType": "bool",
			"title": "首页显示",
			"description": "是否首页显示"
		},
		"status": {
			"bsonType": "bool",
			"defaultValue": true,
			"title": "生效状态"
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"defaultValue": {
				"$env": "now"
			}
		}
	}
}
